# Blood Donation System - Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=change-this-to-a-very-secure-random-string
DATABASE_URL=sqlite:///blood_donation.db

# Email Configuration (for notifications)
# Gmail example - you'll need to generate an app password
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Security Settings
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# For production deployment, change these:
# FLASK_ENV=production
# SESSION_COOKIE_SECURE=True (requires HTTPS)
# SECRET_KEY=generate-a-very-secure-random-key
